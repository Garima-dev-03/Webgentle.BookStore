@using Webgentle.BookStore.Models
@model IEnumerable<MovieModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllMovies</title>
</head>
<body>
    <div class="container">
        <div class="h3">Get here all movies</div>
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-m-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="/image/Titleimag.png" alt="..." class="img-thumbnail" height="150" width="250">
                        <div class="card-body">
                            <div class="card-title alert-success">@movie.Title</div>
                          
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="/movie/getmovie/@movie.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
                                </div>
                                <small class="text-muted">@movie.Director</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
       
    </div>
    
</body>
</html>
