@using Webgentle.BookStore.Models
@model MovieModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <div class="h3">Movie Details</div>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/Image/marvelmovie.jpg" alt="First slide" height="400" width="50">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/Image/movie.jpg" alt="Second slide" height="400" width="50">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/Image/notebookmovie.jpg" alt="Third slide" height="400" width="50">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>
                        @Model.Title
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h5>
                        @Model.Description
                    </h5><br>
                    <h6> Directed By:@Model.Director</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="#" class="btn btn-danger">Watch</a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group">

                                <a asp-controller="movie" asp-action="delete" asp-route-id="@Model.Id" class="btn btn-outline-info">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div><br>           
    </div>
</div>
